# Database (Vercel Postgres)
# Get this from Vercel dashboard after creating Postgres database
POSTGRES_URL="postgres://default:***@***-pooler.postgres.vercel-storage.com:5432/verceldb"
POSTGRES_PRISMA_URL="postgres://default:***@***-pooler.postgres.vercel-storage.com:5432/verceldb?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NO_SSL="postgres://default:***@***-pooler.postgres.vercel-storage.com:5432/verceldb"
POSTGRES_URL_NON_POOLING="postgres://default:***@***-pooler.postgres.vercel-storage.com:5432/verceldb"
POSTGRES_USER="default"
POSTGRES_HOST="***-pooler.postgres.vercel-storage.com"
POSTGRES_PASSWORD="***"
POSTGRES_DATABASE="verceldb"

# For local development with Docker (alternative)
# DATABASE_URL="postgresql://eventops:eventops@localhost:5432/eventops?schema=public"

# Auth (NextAuth v5)
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-min-32-chars-change-in-prod"
AUTH_URL="http://localhost:3000"

# Feature Flags (ENV-based)
ENABLE_AUTO_ENRICHMENT="false"

# Optional: External APIs (Sprint 8)
SERPAPI_KEY=""
OPENAI_API_KEY=""

# Node Environment
NODE_ENV="development"
