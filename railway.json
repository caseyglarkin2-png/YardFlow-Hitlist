{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "eventops/nixpacks.toml",
    "buildCommand": "cd eventops && npm ci && npx prisma generate && NODE_OPTIONS=\"--max-old-space-size=4096\" npm run build"
  },
  "deploy": {
    "startCommand": "cd eventops && ./start-production.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
